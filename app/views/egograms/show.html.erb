<div class="container">

  <div class="row">
    <div class="col-2">
      <%= attachment_image_tag @egogram, :egogram_image, size: "200x200" %>
      <%= @egogram.type_name %>
      <p>タイプ</p>
    </div>
    <div class="col-7 offset-md-1">
      <h3>長所</h3>
      <p><%= @egogram.strong_point_title %></p>
      <h3>長所説明</h3>
      <p><%= @egogram.strong_point_body %></p>
      <h3>短所</h3>
      <p><%= @egogram.weak_point_title %></p>
      <h3>短所説明</h3>
      <p><%= @egogram.weak_point_body %></p>
      <h3>アドバイス</h3>
      <p><%= @egogram.advice_title %></p>
      <h3>アドバイス説明</h3>
      <p><%= @egogram.advice_body %></p>
    </div>
  </div>
</div>